<h1>Add new resto!</h1>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, collection: Restaurant::CATEGORY %><br><br>
  <%= f.submit "Add Resto", class: "btn btn-primary" %>
<% end %>

<p>
  <%= link_to "Return to Restaurants List", restaurants_path%>
</p>
