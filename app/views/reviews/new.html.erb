<h1>Add new review!</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.select :rating, collection: Review::RATING %>
  <br><br>
  <%= f.submit "Add Review", class: "btn btn-primary" %>
<% end %>

<p>
  <%= link_to "Return to Restaurant", restaurant_path(@restaurant)%>
</p>
